default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Setup App Store Connect API Key from environment variables
    if ENV["APP_STORE_CONNECT_API_KEY_CONTENT"]
      app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
        is_key_content_base64: false
      )
    end

    # Fetch certificates and provisioning profiles using Match
    match(
      type: "appstore",
      readonly: is_ci,
      git_basic_authorization: ENV["MATCH_GIT_BASIC_AUTHORIZATION"]
    )

    # Configure Xcode project with signing settings from Match
    # This is required because xcodebuild archive needs DEVELOPMENT_TEAM set
    update_code_signing_settings(
      use_automatic_signing: false,
      path: "Runner.xcodeproj",
      team_id: ENV["TEAM_ID"],
      bundle_identifier: "com.easymode.app",
      profile_name: "match AppStore com.easymode.app",
      code_sign_identity: "Apple Distribution"
    )

    # Ensure we're in the right directory for Flutter commands
    Dir.chdir("..") do
      # Clean Flutter build
      sh("flutter clean")
      
      # Get Flutter dependencies
      sh("flutter pub get")
      
      # Build iOS release without codesign (Fastlane will handle signing)
      sh("flutter build ios --release --no-codesign")
    end

    # Build the IPA with proper signing
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "EasyMode.ipa",
      xcargs: "DEVELOPMENT_TEAM='#{ENV["TEAM_ID"]}' CODE_SIGN_IDENTITY='Apple Distribution'",
      export_options: {
        signingStyle: "manual",
        teamID: ENV["TEAM_ID"],
        provisioningProfiles: {
          "com.easymode.app" => "match AppStore com.easymode.app"
        }
      }
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      skip_submission: true
    )
  end

  desc "Build only (no upload)"
  lane :build do
    # Fetch certificates
    match(type: "appstore", readonly: true)

    Dir.chdir("..") do
      sh("flutter clean")
      sh("flutter pub get")
      sh("flutter build ios --release --no-codesign")
    end

    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "EasyMode.ipa"
    )
  end

  desc "Setup certificates and provisioning profiles"
  lane :certificates do
    if ENV["APP_STORE_CONNECT_API_KEY_CONTENT"]
      app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
        is_key_content_base64: false
      )
    end

    match(type: "appstore", readonly: false)
  end

  desc "Generate new certificates (run locally, not in CI)"
  lane :setup_certs do
    if ENV["APP_STORE_CONNECT_API_KEY_CONTENT"]
      app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
        is_key_content_base64: false
      )
    end

    match(type: "appstore", readonly: false, force_for_new_devices: true)
  end
end
